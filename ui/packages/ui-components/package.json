{
    "name": "@stackrox/ui-components",
    "version": "0.3.0",
    "description": "StackRox library of UI (React) components",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/stackrox/rox.git",
        "directory": "ui/packages/ui-components"
    },
    "license": "UNLICENSED",
    "files": [
        "lib/**/*",
        "src/**/*",
        "!src/**/*.test.ts",
        "!src/**/*.test.tsx"
    ],
    "scripts": {
        "clean": "rm -rf lib test-results coverage",
        "start:tailwind": "postcss -w ./src/index.tw.css -o ./lib/ui-components.css",
        "start:ts": "tsc --watch",
        "start": "npm-run-all -p start:*",
        "build:tailwind": "postcss ./src/index.tw.css -o ./lib/ui-components.css",
        "build:ts": "tsc --build",
        "build": "npm-run-all build:*",
        "test": "JEST_JUNIT_UNIQUE_OUTPUT_NAME=true JEST_JUNIT_OUTPUT_DIR=${TEST_RESULTS_OUTPUT_DIR:-test-results}/reports jest --coverage --reporters=default --reporters=jest-junit",
        "test:watch": "jest --watch-all",
        "lint:non-src": "prettier --check '**/*.{md,css,json}'",
        "lint:src": "eslint --ext .js,.ts,.tsx ./",
        "lint": "npm-run-all lint:*",
        "lint-fix:non-src": "prettier --write '**/*.{md,css,json}'",
        "lint-fix:src": "eslint --fix --ext .js,.ts,.tsx ./",
        "lint-fix": "npm-run-all lint-fix:*",
        "prepublishOnly": "yarn clean && yarn build"
    },
    "peerDependencies": {
        "react": "^16.12.0 || ^17",
        "react-dom": "^16.12.0 || ^17"
    },
    "dependencies": {
        "@tippyjs/react": "^4.2.5",
        "formik": "^2.2.9",
        "initials": "^3.1.1",
        "lodash": "^4.17.21",
        "react-feather": "^2.0.9",
        "tippy.js": "^6.3.7",
        "yup": "^1.0.0-beta.2"
    },
    "devDependencies": {
        "@babel/core": "7.12.3",
        "@stackrox/tailwind-config": "^0.2.0",
        "@testing-library/jest-dom": "^5.15.0",
        "@testing-library/react": "^12.1.2",
        "@testing-library/user-event": "^13.5.0",
        "@types/lodash": "^4.14.176",
        "@types/node": "^17.0.16",
        "@types/react": "^17.0.34",
        "@types/react-dom": "^17.0.11",
        "@typescript-eslint/eslint-plugin": "^4.32.0",
        "@typescript-eslint/parser": "^4.32.0",
        "autoprefixer": "^10.2.5",
        "babel-loader": "^8.1.0",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-typescript": "12.3.1",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jest": "^24.5.0",
        "eslint-plugin-jest-dom": "^3.9.2",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.27.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-testing-library": "^5.0.5",
        "jest": "^26.6.3",
        "jest-junit": "^12.0.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.4",
        "postcss-cli": "^8.3.1",
        "prettier": "^2.5.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-is": "^17.0.2",
        "tailwindcss": "^2.0.3",
        "ts-jest": "^26.5.6",
        "typescript": "^4.6.2"
    }
}
