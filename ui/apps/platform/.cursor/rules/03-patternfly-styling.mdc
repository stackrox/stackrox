                            isRequired
                        />
                    </FormGroup>
                </GridItem>

                <GridItem span={6}>
                    <FormGroup label="Provider Type" fieldId="provider-type">
                        <FormSelect
                            value={type}
                            onChange={(value) => setType(value as AuthProviderType)}
                            id="provider-type"
                            name="provider-type"
