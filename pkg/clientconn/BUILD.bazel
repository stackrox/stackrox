    name = "clientconn_test",
    srcs = [
        "client_test.go",
        "useragent_test.go",
    ],
    data = glob(["testdata/**"]),
    embed = [":clientconn"],
    deps = [
        "//pkg/httputil",
        "//pkg/mtls",
        "//pkg/mtls/verifier",
        "//pkg/testutils",
        "@com_github_stretchr_testify//assert",
