load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "containers",
    srcs = [
        "detection.go",
        "ports.go",
    ],
    importpath = "github.com/stackrox/rox/pkg/containers",
    visibility = ["//visibility:public"],
    deps = [
        "//generated/storage",
        "//pkg/utils",
        "@com_github_pkg_errors//:errors",
