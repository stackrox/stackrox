alias(
    name = "go_default_library",
    actual = ":containers",
    visibility = ["//visibility:public"],
)

go_test(
    name = "containers_test",
    srcs = [
        "detection_test.go",
        "ports_test.go",
    ],
    embed = [":containers"],
    deps = [
        "//generated/storage",
        "@com_github_stretchr_testify//assert",
    ],
