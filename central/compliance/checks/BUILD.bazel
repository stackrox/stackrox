alias(
    name = "go_default_library",
    actual = ":checks",
    visibility = ["//visibility:public"],
)

go_test(
    name = "checks_test",
    srcs = ["all_test.go"],
    embed = [":checks"],
    deps = [
        "//central/compliance/framework",
        "//central/compliance/standards",
        "//central/compliance/standards/metadata",
        "@com_github_stretchr_testify//assert",
    ],
)
