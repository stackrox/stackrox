load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "checks",
    srcs = ["all.go"],
    importpath = "github.com/stackrox/rox/central/compliance/checks",
    visibility = ["//visibility:public"],
    deps = [
        "//central/compliance/checks/hipaa_164",
        "//central/compliance/checks/nist800-190",
        "//central/compliance/checks/nist80053",
        "//central/compliance/checks/pcidss32",
        "//central/compliance/checks/remote",
