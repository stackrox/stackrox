go_binary(
    name = "roxctl",
    embed = [":roxctl_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "roxctl_test",
    srcs = ["main_test.go"],
    embed = [":roxctl_lib"],
    deps = [
        "//pkg/sync",
        "//roxctl/common",
        "//roxctl/maincommand",
        "@com_github_spf13_cobra//:cobra",
        "@com_github_stretchr_testify//assert",
    ],
)
