load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "roxctl_lib",
    srcs = ["main.go"],
    importpath = "github.com/stackrox/rox/roxctl",
    visibility = ["//visibility:private"],
    deps = [
        "//pkg/clientconn",
        "//pkg/devbuild",
        "//pkg/sync",
        "//roxctl/common",
        "//roxctl/maincommand",
        "//roxctl/utils",
        "@com_github_spf13_cobra//:cobra",
